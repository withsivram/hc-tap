FROM python:3.12-slim

WORKDIR /app

# Install deps
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir https://s3-us-west-2.amazonaws.com/ai2-s2-scispacy/releases/v0.5.4/en_core_sci_sm-0.5.4.tar.gz

# Copy source
COPY services/ services/

# Expose port
EXPOSE 8501

# Command
CMD ["streamlit", "run", "services/analytics/dashboard.py", "--server.port=8501", "--server.address=0.0.0.0"]

