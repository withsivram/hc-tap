FROM python:3.12-slim

WORKDIR /app

# Install deps
COPY requirements.txt .
# Install spacy model during build
RUN pip install --no-cache-dir -r requirements.txt

# Copy source
COPY services/ services/

# Expose port
EXPOSE 8000

# Command
CMD ["uvicorn", "services.api.app:app", "--host", "0.0.0.0", "--port", "8000"]

